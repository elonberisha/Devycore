# -------------------------------------------------------------
# Devycore .htaccess (Apache)
# -------------------------------------------------------------
# Funksione kryesore:
#  - Friendly default (index.php)
#  - Compression + caching statik
#  - Security headers
#  - Fshehje skedarësh sensitivë
#  - Fallback SPA / Vite build (serve index.php kur nuk ekziston resource)
#  - Optional WWW -> non-www (ose komento nëse s'do)
# -------------------------------------------------------------

# UTF-8 gjithkund
AddDefaultCharset utf-8

# (Optional) Force HTTPS (hiq nëse Hostinger e menaxhon vetë)
# RewriteEngine On
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# (Optional) Redirect www -> non-www (ose anasjelltas nëse preferon)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# Aktivizo rewrite nëse ende jo
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Mos prek skedarët / dosjet ekzistuese
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  # Fallback tek index.php (lejon deep links / anchors)
  RewriteRule ^ index.php [L]
</IfModule>

# Parandalim listimi direktoriesh
Options -Indexes

# Fshehje skedarësh sensitivë
<FilesMatch "(?i)^(mail\.config\.php|composer\.json|composer\.lock|package\.json|package-lock\.json|vite\.config\.(js|ts)|.*\.env)$">
  Require all denied
</FilesMatch>

# Blloko akses direkt vendor nëse nuk nevojitet publik
RedirectMatch 404 ^/vendor/.*$

# Lejo CORS minimal për fontet (nëse ke fonts custom)
<IfModule mod_headers.c>
  <FilesMatch "\.(woff2?|ttf|otf|eot)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Static caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType font/woff2 "access plus 30 days"
</IfModule>

# Long-term immutable cache për bundle Vite në /dist (hash filenames)
<IfModule mod_headers.c>
  <LocationMatch "^/dist/.*\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </LocationMatch>
</IfModule>

# Security headers (mos dyfisho nëse paneli i host-it i vendos automatikisht)
<IfModule mod_headers.c>
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
  Header always set X-XSS-Protection "1; mode=block"
  # Vendoset vetëm në HTTPS
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
</IfModule>

# Gzip për SVG inline (nëse s'konsumon CPU shumë)
AddType image/svg+xml svg svgz
AddEncoding gzip svgz

# 404 custom (opsionale) – mund të krijosh 404.php
